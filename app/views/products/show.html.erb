<div class="container navplace">
  <div class="row mar-top">
    <div class="col-md-6">
      <h2>Name: <%= @product.name %></h2>
      <p><strong>Description:</strong> <%= @product.description %></p>
      <h3>Colour: <%= @product.colour %></h3>
      <h3>Price: <%= @product.price %>&euro;</h3>
      <p>Average Rating: 
      <div class="rated" data-score=<%= @product.average_rating %>></div>
      </p>
    </div>
    <div class="col-md-6">
      <%= image_tag(@product.image_url, class: "img-responsive img-thumbnail") %>
    </div>
  </div>
  <div class="row mar-top">
    <%= render "examples" %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= render "new_comment" %>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-6">
      <%= render "comments" %>
    </div>
    <div class="col-xs-12">
      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default" %>
      <%= link_to 'Back', products_path, class: "btn btn-default" %>  
    </div>
  </div>
</div>
