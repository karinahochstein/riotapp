<div class="container navplace">
  <div class="row mar-top">
    <div class="col-md-6">
      <h2>Name: <%= @product.name %></h2>
      <p><strong>Description:</strong> <%= @product.description %> Eur</p>
      <h3>Colour: <%= @product.colour %></h3>
      <h3>Price: <%= @product.price %></h3>
    </div>
    <div class="col-md-6">
      <%= image_tag(@product.image_url, class: "img-responsive img-thumbnail") %>
    </div>
  </div>
  <div class="row mar-top">
    <div class="col-md-6">
    </div>
    <div class="col-md-3 col-sm-6 col-xs-6">
      <h5>Best Comment</h5>
      <% @product.highest_rating_comment.rating.times do %>
      <span class="glyphicon glyphicon glyphicon-star"></span>
      <% end %>
      <p><%= @product.highest_rating_comment.body %></p>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-6">
      <h5>Worst Comment</h5>
      <% @product.lowest_rating_comment.rating.times do %>
      <span class="glyphicon glyphicon glyphicon-star"></span>
      <% end %>
      <p><%= @product.lowest_rating_comment.body %></p>
    </div>
    <div class="col-xs-12">
      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default" %>
      <%= link_to 'Back', products_path, class: "btn btn-default" %>  
    </div>
  </div>
</div>